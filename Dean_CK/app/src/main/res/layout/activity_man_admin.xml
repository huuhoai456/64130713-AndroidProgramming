<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bgmanadmin"
    tools:context=".ManAdmin">

    <!-- Nút quay lại được làm to hơn và giảm margin dưới -->
    <Button
        android:id="@+id/buttonQuayLai"
        android:layout_width="77dp"
        android:layout_height="32dp"
        android:layout_gravity="start"
        android:layout_marginBottom="8dp"
        android:background="@android:color/transparent"
        android:padding="0dp"
        android:text="←"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center" />

    <!-- Nút thêm truyện gần hơn với nút quay lại -->
    <Button
        android:id="@+id/buttonThemtruyen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Thêm Truyện"
        android:backgroundTint="#7B4ED4"
        android:textColor="@android:color/white"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="0dp" />

    <!-- Danh sách truyện -->
    <ListView
        android:id="@+id/listviewAdmin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:dividerHeight="8dp" />
</LinearLayout>
